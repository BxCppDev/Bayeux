# -*- mode: gnuplot; -*-
# C++ source: ./programs/test_polycone.cxx
#

! ${GEOMTOOLS_ROOT}/$(geomtools-config --system)/bin/test_polycone > test_polycone.data

set xrange [-20:20]
set yrange [-20:20]
set zrange [-20:20]
set xlabel "x"
set ylabel "y"
set zlabel "z"
set title "test_polycone.cxx - test"
splot \
  "test_polycone.data" index 0 title "Polycone 3D" with lines
pause -1

set size ratio -1
set xlabel "x"
set ylabel "z"
set title "test_polycone.cxx - test"
plot \
  "test_polycone.data" index 0 u 1:3 title "Polycone XZ" with lines
pause -1

! rm -f test_polycone.data

# end 