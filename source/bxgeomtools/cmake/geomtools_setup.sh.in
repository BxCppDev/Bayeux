# -*- mode : shell-script; -*-
# geomtools_setup.sh

function do_geomtools_print_info ()
{
    local indent=""
    if [ "x$1" != "x" ]; then
	indent="${1}: "
	shift 1
    fi
    if [ "x${GEOMTOOLS_ROOT}" != "x" ]; then
	echo "${indent}Current geomtools setup is :" 1>&2
	echo "${indent}GEOMTOOLS_ROOT                = '${GEOMTOOLS_ROOT}'" 1>&2
	echo "${indent}GEOMTOOLS_NAME                = '${GEOMTOOLS_NAME}'" 1>&2
	echo "${indent}GEOMTOOLS_VERSION             = '${GEOMTOOLS_VERSION}'" 1>&2
	echo "${indent}GEOMTOOLS_WITH_DEBUG          = ${GEOMTOOLS_WITH_DEBUG}" 1>&2
	echo "${indent}GEOMTOOLS_WITH_BIO            = ${GEOMTOOLS_WITH_BIO}" 1>&2
	echo "${indent}GEOMTOOLS_WITH_REFLECTION     = ${GEOMTOOLS_WITH_REFLECTION}" 1>&2
	echo "${indent}GEOMTOOLS_BIN_DIR             = '${GEOMTOOLS_BIN_DIR}'"
	echo "${indent}GEOMTOOLS_ETC_DIR             = '${GEOMTOOLS_ETC_DIR}'"
	echo "${indent}GEOMTOOLS_LIB_DIR             = '${GEOMTOOLS_LIB_DIR}'"
	echo "${indent}GEOMTOOLS_DOC_DIR             = '${GEOMTOOLS_DOC_DIR}'"
	echo "${indent}GEOMTOOLS_INCLUDE_DIR         = '${GEOMTOOLS_INCLUDE_DIR}'"
	echo "${indent}GEOMTOOLS_CMAKE_CONFIG_DIR    = '${GEOMTOOLS_CMAKE_CONFIG_DIR}'" 1>&2
	echo "${indent}GEOMTOOLS_DATA_DIR            = '${GEOMTOOLS_DATA_DIR}'" 1>&2
    else
	echo "${indent}geomtools is not setup." 1>&2
    fi
    return 0
}
typeset -fx do_geomtools_print_info
alias geomtools_print_info='do_geomtools_print_info'

function do_geomtools_setup ()
{
    local verbose=0
    
    while [ -n "$1" ]; do
	if [ "$1" = "--verbose" -o "$1" = "-v" ]; then
	  let verbose=verbose+1
	fi
	shift 1
    done

    if [ ${verbose} -ne 0 ]; then
	echo "NOTICE: do_geomtools_setup: Setup geomtools..." 1>&2
    fi

    if [ "x${GEOMTOOLS_ROOT}" != "x" ]; then
	echo "WARNING: do_geomtools_setup: geomtools is already setup !" 1>&2
	return 2
    fi 

    if [ "x@GEOMTOOLS_WITH_REFLECTION@" = "x1" ]; then
	which camp-config >/dev/null 2>&1
	if [ $? -ne 0 ]; then
	    echo "ERROR: do_geomtools_setup: Cannot find CAMP setup ! Abort !" 1>&2
	    return 1
	else
	    if [ ${verbose} -ne 0 ]; then
		echo "VERBOSE: do_geomtools_setup: Found CAMP." 1>&2
	    fi
	fi
    fi

    which clhep-config >/dev/null 2>&1
    if [ $? -ne 0 ]; then
	echo "ERROR: do_geomtools_setup: Cannot find CLHEP setup ! Abort !" 1>&2
	return 1
    else
	if [ ${verbose} -ne 0 ]; then
	    echo "VERBOSE: do_geomtools_setup: Found CLHEP." 1>&2
	fi
    fi

    which mygsl-config >/dev/null 2>&1
    if [ $? -ne 0 ]; then
	echo "ERROR: do_geomtools_setup: Cannot find mygsl setup ! Abort !" 1>&2
	return 1
    else
	if [ ${verbose} -ne 0 ]; then
	    echo "VERBOSE: do_geomtools_setup: Found mygsl." 1>&2
	fi
    fi

    which materials-config >/dev/null 2>&1
    if [ $? -ne 0 ]; then
	echo "ERROR: do_geomtools_setup: Cannot find materials setup ! Abort !" 1>&2
	return 1
    else
	if [ ${verbose} -ne 0 ]; then
	    echo "VERBOSE: do_geomtools_setup: Found materials." 1>&2
	fi
    fi
     
    export GEOMTOOLS_ROOT="@CMAKE_INSTALL_PREFIX@"
    export GEOMTOOLS_ROOT_DIR="@CMAKE_INSTALL_PREFIX@"
    export GEOMTOOLS_NAME="@PROJECT_NAME@"
    export GEOMTOOLS_VERSION="@geomtools_VERSION@"
    export GEOMTOOLS_BIN_DIR="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_BINDIR@"
    export GEOMTOOLS_ETC_DIR="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_ETCDIR@"
    export GEOMTOOLS_LIB_DIR="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@"
    export GEOMTOOLS_DOC_DIR="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DOCDIR@"
    export GEOMTOOLS_INCLUDE_DIR="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@"
    export GEOMTOOLS_DATA_DIR="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@"
    export GEOMTOOLS_WITH_DEBUG=@GEOMTOOLS_WITH_DEBUG@
    export GEOMTOOLS_WITH_BIO=@GEOMTOOLS_WITH_BIO@
    export GEOMTOOLS_WITH_REFLECTION=@GEOMTOOLS_WITH_REFLECTION@
    export GEOMTOOLS_CMAKE_CONFIG_DIR="@CMAKE_INSTALL_PREFIX@/@_geomtools_cmake_config_install_dir@"

    if [ -n "${PATH}" ]; then
	export PATH="${GEOMTOOLS_BIN_DIR}:${PATH}"
    else
	export PATH="${GEOMTOOLS_BIN_DIR}"
    fi 
   
    if [ -n "${@_ld_library_path_env@}" ]; then
	export @_ld_library_path_env@="${GEOMTOOLS_LIB_DIR}:${@_ld_library_path_env@}"
    else
	export @_ld_library_path_env@="${GEOMTOOLS_LIB_DIR}"
    fi 

    if [ ${verbose} -gt 1 ]; then
	do_geomtools_print_info "VERBOSE: do_geomtools_setup"
    fi
 
    if [ ${verbose} -ne 0 ]; then
	echo "NOTICE: do_geomtools_setup: Setup geomtools done." 1>&2
    fi
    return 0
}
typeset -fx do_geomtools_setup

echo "NOTICE: do_geomtools_setup: Please setup 'geomtools' with 'do_geomtools_setup'." 1>&2

# end of geomtools_setup.sh