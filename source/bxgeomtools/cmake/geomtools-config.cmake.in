set(geomtools_WITH_BIO        @GEOMTOOLS_WITH_BIO@)
set(geomtools_WITH_REFLECTION @GEOMTOOLS_WITH_REFLECTION@)
set(geomtools_MYGSL_DIR       @mygsl_DIR@)

#-----------------------------------------------------------------------
# Locate ourselves, since all our config files should have been installed
# alongside us...
#
get_filename_component(_geomtools_thisdir "${CMAKE_CURRENT_LIST_FILE}" PATH)

#-----------------------------------------------------------------------
# Include the file listing all the imported targets to make them available
# This is installed in the same location as us...
# Protect it with an in-memory variable so that we don't include
# it twice should multiple calls to find_package be made
if(NOT geomtools_LIBDEPS_LOADED)
  find_package(mygsl REQUIRED CONFIG PATHS ${geomtools_MYGSL_DIR} NO_DEFAULT_PATH)
  include("${_geomtools_thisdir}/geomtools-libraries.cmake")
  set(geomtools_LIBDEPS_LOADED 1)
endif()

#-----------------------------------------------------------------------
# Set variables pointing to used third party headers and locations.
# We have to set the headers because geomtools exports the headers in
# its public interface.
# The locations are set so that clients using those packages (i.e. Boost and
# ROOT), can re-find them if needed using exact locations (EXPERIMENTAL)
# e.g:
#
#  find_package(geomtools)
#  set(BOOST_ROOT ${geomtools_BOOST_ROOT})
#  find_package(Boost NO_DEFAULT_PATH)
#
set(geomtools_THIRD_PARTY_INCLUDE_DIRS
  @mygsl_INCLUDE_DIRS@
  @CLHEP_INCLUDE_DIRS@
  )

if(geomtools_WITH_REFLECTION)
  list(INSERT geomtools_THIRD_PARTY_INCLUDE_DIRS 0
     @CAMP_INCLUDE_DIR@
  )
endif()

#-----------------------------------------------------------------------
# Set geomtools definitions, include paths and library variables
#
get_filename_component(_geomtools_inc "${_geomtools_thisdir}/@TO_GEOMTOOLS_INCLUDEDIR@" ABSOLUTE)

set(geomtools_INCLUDE_DIR "${_geomtools_inc}" CACHE PATH "Path to geomtools headers")

set(geomtools_INCLUDE_DIRS
  ${geomtools_INCLUDE_DIR}
  ${geomtools_THIRD_PARTY_INCLUDE_DIRS}
  )

#-----------------------------------------------------------------------
# Set geomtools_LIBRARIES variable
set(geomtools_LIBRARY geomtools CACHE PATH "Path to geomtools library")

if(geomtools_WITH_BIO)
  set(geomtools_BIO_LIBRARY geomtools_bio)
endif()

if(geomtools_WITH_REFLECTION)
  set(geomtools_REFLECTION_LIBRARY geomtools_reflection)
endif()
  
set(geomtools_LIBRARIES ${geomtools_LIBRARY})

unset(_geomtools_inc)
# end
