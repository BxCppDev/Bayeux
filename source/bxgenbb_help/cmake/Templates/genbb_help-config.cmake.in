if ( NOT DEFINED genbb_help_CONFIG_COUNTER )
set ( genbb_help_CONFIG_COUNTER 1 )

#----------------------------------------------------------------------------
# Locate ourselves, since all our config files should have been installed
# alongside us...
#
get_filename_component(_thisdir "${CMAKE_CURRENT_LIST_FILE}" PATH)

#----------------------------------------------------------------------------
# Include the file listing all the imported targets to make them available
# This is installed in the same location as us...
#
include("${_thisdir}/genbb_help-libraries.cmake")

#----------------------------------------------------------------------------
# Set variables pointing to used third party headers and locations.
# We have to set the headers because genbb_help exports the headers in
# its public interface.

# ----------------------------------------------------------------------------
# geomtools dependency :
#
find_package ( geomtools @geomtools_VERSION@ REQUIRED NO_MODULE )
if (NOT DEFINED geomtools_CONFIG)
   message ( FATAL_ERROR "genbb_help-config.cmake : Cannot find geomtools >= @geomtools_VERSION@ !" )
else ()
   message ( STATUS "genbb_help-config.cmake : Found the geomtools library version ${geomtools_VERSION} !" )
endif ()

set( _genbb_help_geomtools_INCLUDE_DIRS ${geomtools_INCLUDE_DIRS} )
set( _genbb_help_geomtools_LIBRARIES    ${geomtools_LIBRARIES}    )

#----------------------------------------------------------------------------
# Set path to genbb_help includes
#
set ( genbb_help_ONLY_INCLUDE_DIRS @genbb_help_INCLUDE_DIR@)
set ( genbb_help_INCLUDE_DIRS
      ${genbb_help_ONLY_INCLUDE_DIRS}
      ${_genbb_help_geomtools_INCLUDE_DIRS}
    )

#----------------------------------------------------------------------------
# Set genbb_help_LIBRARIES variable
set(genbb_help_LIB_DIR @genbb_help_LIB_DIR@)
# Basic : Assume that if genbb_help_bio was built, it should be in Library list
set(genbb_help_F77_LIBRARY genbb_help_f77 )
set(genbb_help_LIBRARY genbb_help )

set(genbb_help_WITH_DEBUG @GENBB_HELP_WITH_DEBUG@)
if(genbb_help_WITH_DEBUG)
  set(genbb_help_WITH_DEBUG 1)
else()
  set(genbb_help_WITH_DEBUG 0)
endif()

if ( @GENBB_HELP_WITH_BIO_SUPPORT@ )
 set(genbb_help_WITH_BIO @GENBB_HELP_WITH_BIO@)
 if(genbb_help_WITH_BIO)
   set(genbb_help_WITH_BIO 1)
   set(genbb_help_BIO_LIBRARY genbb_help_bio )
 else()
   set(genbb_help_WITH_BIO 0)
 endif()
endif()

if ( @GENBB_HELP_WITH_PYTHON_WRAPPER_SUPPORT@ )
  set(genbb_help_WITH_PYTHON_WRAPPER @GENBB_HELP_WITH_PYTHON_WRAPPER@)
  if(genbb_help_WITH_PYTHON_WRAPPER)
    set(genbb_help_WITH_PYTHON_WRAPPER 1)
  else()
    set(genbb_help_WITH_PYTHON_WRAPPER 0)
  endif()
endif ()

set ( genbb_help_ONLY_LIBRARIES
  ${genbb_help_BIO_LIBRARY} 
  ${genbb_help_LIBRARY} 
  ${genbb_help_F77_LIBRARY}
  )
set ( genbb_help_LIBRARIES 
  ${genbb_help_ONLY_LIBRARIES}
  ${_genbb_help_geomtools_LIBRARIES}
  )
 
set (genbb_help_DEFINITIONS @_genbb_help_definitions@ )

unset(_genbb_help_geomtools_LIBRARIES)
unset(_genbb_help_geomtools_INCLUDE_DIRS)

else ( NOT DEFINED genbb_help_CONFIG_COUNTER )
  message ( STATUS "WARNING: Multiple inclusion of the 'genbb_help-config.cmake' file !" )
  math (EXPR genbb_help_CONFIG_COUNTER '${genbb_help_CONFIG_COUNTER}+1' )
endif ( NOT DEFINED genbb_help_CONFIG_COUNTER )


# end
