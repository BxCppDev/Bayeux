#!/usr/bin/env bash
# -*- mode: shell-script; -*-
# dpp-config
# Author: F. Mauger <mauger@lpccaen.in2p3.fr>
#

script_name="dpp-config"

opwd=$(pwd)
help=0
debug=0

function my_exit ()
{
    cd ${opwd}
    exit $1
}

dpp_system="@CMAKE_SYSTEM_NAME@-@CMAKE_SYSTEM_PROCESSOR@"

dpp_root="@CMAKE_INSTALL_PREFIX@"

dpp_bin_dir="${dpp_root}/@CMAKE_INSTALL_BINDIR@"

dpp_lib_dir="${dpp_root}/@CMAKE_INSTALL_LIBDIR@"

dpp_etc_dir="${dpp_root}/@CMAKE_INSTALL_ETCDIR@"

dpp_doc_dir="${dpp_root}/@CMAKE_INSTALL_DOCDIR@"

dpp_include_dir="${dpp_root}/@CMAKE_INSTALL_INCLUDEDIR@"

dpp_data_dir="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@"

dpp_cmake_config_dir="@CMAKE_INSTALL_PREFIX@/@_dpp_cmake_config_install_dir@"

dpp_version=@dpp_VERSION@

with_debug=0
if [ "x@DPP_WITH_DEBUG@" == "x1" -o "x@DPP_WITH_DEBUG@" == "xON" ]; then
    with_debug=1
fi

with_bio=0
if [ "x@DPP_WITH_BIO@" == "x1" -o "x@DPP_WITH_BIO@" == "xON" ]; then
    with_bio=1
fi

with_reflection=0
if [ "x@DPP_WITH_REFLECTION@" == "x1" -o "x@DPP_WITH_REFLECTION@" == "xON" ]; then
    with_reflection=1
fi

option="$1"
shift 1

if [ "x${option}" = "x" ]; then
    echo "ERROR: ${script_name}: Missing option ! Abort !" 1>&2
    help=1
fi

if [ "x${option}" = "x--help" -o "x${option}" = "x-h" -o "x${option}" = "x-?" ]; then
    help=1
fi

function print_help ()
{
    cat<<EOF
Usage: ${script_name} [OPTIONS]

Known values for OPTION are:

  --help                print this help then exit
  --version             print version information
  --system              print system
  --prefix              print dpp installation prefix
  --bindir              print binary directory
  --libdir              print library directory
  --incdir              print include directory
  --datadir             print data/resources base directory
  --docdir              print documentation base directory
  --etcdir              print configuration base directory
  --include             print include path pre-processor flags without dependencies
  --cflags              print include path pre-processor flags with dependencies
  --libs    [option]    print library linking information, without dependencies
  --ldflags [option]
    Options: 
    --relative-path     use relative DLL path (default)
    --absolute-path     use absolute DLL path
  --with-debug          print if dpp has been compiled in 'debug' mode
  --cmake-config-dir    print the installation directory for the 'dpp-config.cmake' file

EOF
    return 0
}

  #   --with-bio          with linkage against the 'libdpp_bio@CMAKE_SHARED_LIBRARY_SUFFIX@' DLL (default)
  #   --without-bio       without linkage against the 'libdpp_bio@CMAKE_SHARED_LIBRARY_SUFFIX@' DLL
  #   --with-reflection    with linkage against the 'libdpp_reflection@CMAKE_SHARED_LIBRARY_SUFFIX@' DLL (default)
  #   --without-reflection without linkage against the 'libdpp_reflection@CMAKE_SHARED_LIBRARY_SUFFIX@' DLL
  # --with-bio            print if Boost/Serialization binary code is pre-built
  #                       in an auxiliary shared library
  # --with-reflection     print if CAMP-based reflection binary code is pre-built
  #                       in an auxiliary shared library

if [ ${help} -eq 1 ]; then
    print_help
    my_exit 1
fi

if [ "x${option}" = "x--system" ]; then
    echo "${dpp_system}"
    my_exit 0
fi

if [ "x${option}" = "x--prefix" ]; then
    echo "${dpp_root}"
    my_exit 0
fi

if [ "x${option}" = "x--version" ]; then
    echo "${dpp_version}"
    my_exit 0
fi

if [ "x${option}" = "x--incdir" ]; then
    echo "${dpp_include_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--datadir" ]; then
    echo "${dpp_data_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--etcdir" ]; then
    echo "${dpp_etc_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--docdir" ]; then
    echo "${dpp_doc_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--cmake-config-dir" ]; then
    echo "${dpp_cmake_config_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--include" ]; then
    echo "-I${dpp_include_dir} "
    my_exit 0
fi

if [ "x${option}" = "x--cflags" ]; then
    (
	echo -n "-fPIC "
	echo -n "-I${dpp_include_dir} "
        echo -n "`cuts-config --cflags` "
	if [ ${with_reflection} -eq 1 ]; then
 	    echo -n "`camp-config --cflags` "
	fi
	echo ""
    ) ###| python @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@/pkgtools/mkuniqueflags.py
    my_exit 0
fi

if [ "x${option}" = "x--libdir" ]; then
    echo "${dpp_lib_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--bindir" ]; then
    echo "${dpp_bin_dir}"
    my_exit 0
fi

# compute default linkage :
bio_ldflags=
bio_ldflags_abs=
if [ ${with_bio} -eq 1 ]; then
    bio_ldflags=-ldpp_bio
    bio_ldflags_abs=${dpp_lib_dir}/libdpp_bio@CMAKE_SHARED_LIBRARY_SUFFIX@
fi

reflection_ldflags=
reflection_ldflags_abs=
if [ ${with_reflection} -eq 1 ]; then
    reflection_ldflags=-ldpp_reflection
    reflection_ldflags_abs=${dpp_lib_dir}/libdpp_reflection@CMAKE_SHARED_LIBRARY_SUFFIX@
fi

ldflags_abs_path=0
if [ "x${DPP_LDFLAGS_ABSOLUTE_PATH}" = "x1" ]; then
    ldflags_abs_path=1
fi 
if [ "x${option}" = "x--libs" -o "x${option}" = "x--ldflags" ]; then
    while [ -n "$1" ]; do
	lib_option="$1"
	if [ "x${lib_option}" = "x--without-bio" ]; then
	    bio_ldflags=
	    bio_ldflags_abs=
	elif [ "x${lib_option}" = "x--with-bio" -a ${with_bio} -eq 1 ]; then
	    bio_ldflags=-ldpp_bio
	    bio_ldflags_abs=${dpp_lib_dir}/libdpp_bio@CMAKE_SHARED_LIBRARY_SUFFIX@
	elif [ "x${lib_option}" = "x--without-reflection" ]; then
	    reflection_ldflags=
	    reflection_ldflags_abs=
	elif [ "x${lib_option}" = "x--with-reflection" -a ${with_reflection} -eq 1 ]; then
	    reflection_ldflags=-ldpp_reflection
	    reflection_ldflags_abs=${dpp_lib_dir}/libdpp_reflection@CMAKE_SHARED_LIBRARY_SUFFIX@
	elif [ "x${lib_option}" = "x--absolute-path" ]; then
	    ldflags_abs_path=1
	elif [ "x${lib_option}" = "x--relative-path" ]; then
	    ldflags_abs_path=0
	fi
	shift 1
    done
fi
ldflags_abs_path_option=
if [ ${ldflags_abs_path} -eq 1 ]; then
    ldflags_abs_path_option=--absolute-path
fi

if [ "x${option}" = "x--libs" ]; then
    if [ ${ldflags_abs_path} -eq 1 ]; then
	echo -n "${reflection_ldflags_abs} "
	echo -n "${bio_ldflags_abs} "
	echo -n "${dpp_lib_dir}/libdpp@CMAKE_SHARED_LIBRARY_SUFFIX@ "
    else
	echo -n "-L${dpp_lib_dir} "
	echo -n "${reflection_ldflags} "
	echo -n "${bio_ldflags} "
	echo -n "-ldpp "
    fi
    echo
    my_exit 0
fi

if [ "x${option}" = "x--ldflags" ]; then
    (
	if [ ${ldflags_abs_path} -eq 1 ]; then
	    echo -n "${reflection_ldflags_abs} "
	    echo -n "${bio_ldflags_abs} "
	    echo -n "${dpp_lib_dir}/libdpp@CMAKE_SHARED_LIBRARY_SUFFIX@ "
	else
	    echo -n "-L${dpp_lib_dir} "
	    echo -n "${reflection_ldflags} "
	    echo -n "${bio_ldflags} "
	    echo -n "-ldpp "
	fi
        echo -n "`cuts-config --ldflags ${ldflags_abs_path_option}` "
	if [ ${with_reflection} -eq 1 ]; then
 	    echo -n "`camp-config --ldflags` "
	fi
	echo -n "-ldl "
	echo ""
    ) ###| python @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@/pkgtools/mkuniqueflags.py -r
    my_exit 0
fi

if [ "x${option}" = "x--with-debug" ]; then
    echo "${with_debug}"
    if [ "${with_debug}" = "1" ]; then
	my_exit 0
    else
	my_exit 1
    fi
fi

# if [ "x${option}" = "x--with-bio" ]; then
#     echo "${with_bio}"
#     if [ "${with_bio}" = "1" ]; then
# 	my_exit 0
#     else
# 	my_exit 1
#     fi
# fi

# if [ "x${option}" = "x--with-reflection" ]; then
#     echo "${with_reflection}"
#     if [ "${with_reflection}" = "1" ]; then
# 	my_exit 0
#     else
# 	my_exit 1
#     fi
# fi

echo "ERROR: ${script_name}: Unknown option !" 1>&2
print_help
my_exit 1

# end of dpp-config
