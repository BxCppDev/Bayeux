# FindCuts.cmake
# 
# A rather brute force version.
# 
# Locate cuts library
# This module defines
#  CUTS_FOUND
#  CUTS_VERSION
#  CUTS_LIBRARIES
#  CUTS_INCLUDE_DIRS, where to find cuts/cuts_config.h
#  CUTS_LIBRARIES_DEPEND
#  CUTS_INCLUDE_DIRS_DEPEND
# and 
#  CUTS_WITH_BIO if Boost I/O support is activated
#  CUTS_WITH_PYTHON_WRAPPER if Boost Python wrapper support is activated

set ( __bio_support 0 )
set ( __python_wrapper_support 0 )

set ( CUTS_VERSION  @cuts_VERSION_STR@ CACHE STRING "cuts version" )

if ( __python_wrapper_support )
   set ( CUTS_WITH_PYTHON_WRAPPER  @CUTS_WITH_PYTHON_WRAPPER@ CACHE STRING "Python wrapper flag" )
endif ()

if ( __bio_support )
  set ( CUTS_WITH_BIO             @CUTS_WITH_BIO@  "Boost I/O DLL flag" )
endif ()

message ( STATUS "FindCuts: CUTS_VERSION='${CUTS_VERSION}'" )

if ( __bio_support )
  message ( STATUS "FindCuts: CUTS_WITH_BIO='${CUTS_WITH_BIO}'" )
endif ()

if ( __python_wrapper_support )
  message ( STATUS "FindCuts: CUTS_WITH_PYTHON_WRAPPER='${CUTS_WITH_PYTHON_WRAPPER}'" )
endif ()

find_path ( CUTS_INCLUDE_DIRS cuts/cuts_config.h
  HINTS
  $ENV{CUTS_ROOT_DIR}
  PATH_SUFFIXES include
  PATHS
  [HKEY_LOCAL_MACHINE\\SOFTWARE\\cuts]
  ~/Library/Frameworks
  /Library/Frameworks
  /usr/local
  /usr
  /sw # Fink
  /opt/local # DarwinPorts
  /opt/csw # Blastwave
  /opt
)

message ( STATUS "FindCuts: CUTS_INCLUDE_DIRS='${CUTS_INCLUDE_DIRS}'" )

find_library ( _cuts_library 
  NAMES cuts
  HINTS $ENV{CUTS_ROOT_DIR}
  PATHS
  [HKEY_LOCAL_MACHINE\\SOFTWARE\\cuts]
  ~/Library/Frameworks
  /Library/Frameworks
  /usr/local
  /usr
  /sw
  /opt/local
  /opt/csw
  /opt
  PATH_SUFFIXES lib64 lib
)
message ( STATUS "FindCuts: CUTS_LIBRARY='${CUTS_LIBRARY}'" )
set ( _cuts_libraries "${_cuts_library}" )

if ( __bio_support )
  if ( ${CUTS_WITH_BIO} )
    find_library ( _cuts_bio_library 
      NAMES cuts_bio
      HINTS $ENV{CUTS_ROOT_DIR}
      PATHS
      [HKEY_LOCAL_MACHINE\\SOFTWARE\\cuts]
      ~/Library/Frameworks
      /Library/Frameworks
      /usr/local
      /usr
      /sw
      /opt/local
      /opt/csw
      /opt
      PATH_SUFFIXES lib64 lib
      )
     message ( STATUS "FindCuts: _cuts_bio_library='${_cuts_bio_library}'" )
     if ( NOT "${_cuts_bio_library}" STREQUAL "" )
       set ( _cuts_libraries "${_cuts_bio_library}" "${_cuts_library}" )
       message ( STATUS "FindCuts: _cuts_libraries='${_cuts_libraries}'" )
    endif ()
  endif ()
endif ()

set ( CUTS_LIBRARIES ${_cuts_libraries} )
message ( STATUS "FindCuts: CUTS_LIBRARIES='${CUTS_LIBRARIES}'" )

include ( FindPackageHandleStandardArgs )
# handle the QUIETLY and REQUIRED arguments and set CUTS_FOUND to TRUE if 
# all listed variables are TRUE
find_package_handle_standard_args ( cuts DEFAULT_MSG CUTS_LIBRARIES CUTS_INCLUDE_DIRS )

set ( CUTS_LIBRARIES_DEPEND 
      ${CUTS_LIBRARIES}
      ###@MYGSL_LIBRARIES_DEPEND@ 
      ###@DATATOOLS_LIBRARIES_DEPEND@
    )

message ( STATUS "FindCuts: CUTS_LIBRARIES_DEPEND='${CUTS_LIBRARIES_DEPEND}'" )

# if (CUTS_WITH_PYTHON_WRAPPER)
#   list ( APPEND CUTS_LIBRARIES_DEPEND 
#          python )
# endif ()

set ( CUTS_INCLUDE_DIRS_DEPEND
      ${CUTS_INCLUDE_DIRS}
      ###@MYGSL_INCLUDE_DIR_DEPEND@
      ###@DATATOOLS_INCLUDE_DIRS_DEPEND@
    )

message ( STATUS "FindCuts: CUTS_INCLUDE_DIRS_DEPEND='${CUTS_INCLUDE_DIRS_DEPEND}'" )

mark_as_advanced (CUTS_VERSION  
                  CUTS_LIBRARY
		  CUTS_INCLUDE_DIRS 
                  CUTS_LIBRARIES 
		  CUTS_INCLUDE_DIRS_DEPEND 
                  CUTS_LIBRARIES_DEPEND 
		  )

if ( __bio_support )
  mark_as_advanced ( CUTS_WITH_BIO )  
endif ()

if ( __python_wrapper_support )
  mark_as_advanced ( CUTS_WITH_PYTHON_WRAPPER )  
endif ()

message ( STATUS "FindCuts: CUTS_FOUND=${CUTS_FOUND}")

# end of FindCuts.cmake

