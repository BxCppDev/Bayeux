// -*- mode: c++; -*- 
/* materials_config.h header file 
 */

#ifndef MATERIALS_MATERIALS_CONFIG_H_
#define MATERIALS_MATERIALS_CONFIG_H_ 1

/*** materials versioning information ***/

//  MATERIALS_VERSION % 100        is the patch level
//  MATERIALS_VERSION / 100 % 1000 is the minor version
//  MATERIALS_VERSION / 100000     is the major version

#define MATERIALS_VERSION_MAJOR @materials_VERSION_MAJOR@
#define MATERIALS_VERSION_MINOR @materials_VERSION_MINOR@
#define MATERIALS_PATCH_VERSION @materials_PATCH_VERSION@

#define MATERIALS_VERSION @_materials_VERSION_NUMERIC@

//  MATERIALS_LIB_VERSION must be defined to be the same as MATERIALS_VERSION
//  but as a *string* in the form "x.y[.z]" where x is the major version
//  number, y is the minor version number, and z is the patch level if not 0.

#define MATERIALS_LIB_VERSION "@materials_VERSION@"

/***  materials debug flag ***/
#cmakedefine01 MATERIALS_WITH_DEBUG

/***  materials embedded Boost/Serialization based I/O ***/
#cmakedefine01 MATERIALS_WITH_BIO

/***  materials embedded CAMP-based reflection ***/
#cmakedefine01 MATERIALS_WITH_REFLECTION

#define MATERIALS_DATA_SCHEMA_LOCAL_PATH "@_materials_DATA_SCHEMA_FULL_LOCAL_PATH@"

//! The installation path of the geomtools resource files :
#define MATERIALS_DATA_INSTALL_DIR "@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@"

#endif // MATERIALS_MATERIALS_CONFIG_H_

// end of materials_config.h
