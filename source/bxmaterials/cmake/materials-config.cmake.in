set(materials_WITH_BIO        @MATERIALS_WITH_BIO@)
set(materials_WITH_REFLECTION @MATERIALS_WITH_REFLECTION@)
set(materials_GEOMTOOLS_DIR   @geomtools_DIR@)

#-----------------------------------------------------------------------
# Locate ourselves, since all our config files should have been installed
# alongside us...
#
get_filename_component(_materials_thisdir "${CMAKE_CURRENT_LIST_FILE}" PATH)

#-----------------------------------------------------------------------
# Include the file listing all the imported targets to make them available
# This is installed in the same location as us...
# Protect it with an in-memory variable so that we don't include
# it twice should multiple calls to find_package be made
if(NOT materials_LIBDEPS_LOADED)
  find_package(geomtools REQUIRED CONFIG PATHS ${materials_GEOMTOOLS_DIR} NO_DEFAULT_PATH)
  include("${_materials_thisdir}/materials-libraries.cmake")
  set(materials_LIBDEPS_LOADED 1)
endif()

#-----------------------------------------------------------------------
# Set variables pointing to used third party headers and locations.
# We have to set the headers because materials exports the headers in
# its public interface.
# The locations are set so that clients using those packages (i.e. Boost and
# ROOT), can re-find them if needed using exact locations (EXPERIMENTAL)
# e.g:
#
#  find_package(materials)
#  set(BOOST_ROOT ${materials_BOOST_ROOT})
#  find_package(Boost NO_DEFAULT_PATH)
#
set(materials_THIRD_PARTY_INCLUDE_DIRS
  @geomtools_INCLUDE_DIRS@
  )

# if(materials_WITH_REFLECTION)
#   list(INSERT materials_THIRD_PARTY_INCLUDE_DIRS 0
#      @CAMP_INCLUDE_DIR@
#   )
# endif()

#-----------------------------------------------------------------------
# Set materials definitions, include paths and library variables
#
get_filename_component(_materials_inc "${_materials_thisdir}/@TO_MATERIALS_INCLUDEDIR@" ABSOLUTE)

set(materials_INCLUDE_DIR "${_materials_inc}" CACHE PATH "Path to materials headers")

set(materials_INCLUDE_DIRS
  ${materials_INCLUDE_DIR}
  ${materials_THIRD_PARTY_INCLUDE_DIRS}
  )

#-----------------------------------------------------------------------
# Set materials_LIBRARIES variable
set(materials_LIBRARY materials CACHE PATH "Path to materials library")

if(materials_WITH_BIO)
  set(materials_BIO_LIBRARY materials_bio)
endif()

if(materials_WITH_REFLECTION)
  set(materials_REFLECTION_LIBRARY materials_reflection)
endif()
  
set(materials_LIBRARIES ${materials_LIBRARY})

unset(_materials_inc)
# end
