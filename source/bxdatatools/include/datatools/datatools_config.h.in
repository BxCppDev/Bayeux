//! \brief  Describe the datatools API configuration

#ifndef DATATOOLS_DATATOOLS_CONFIG_H
#define DATATOOLS_DATATOOLS_CONFIG_H 1

//! Evaluates to true if datatools is built within a bundle library (Bayeux)

//! Evaluates to true if datatools is built in standalone mode
#cmakedefine01 DATATOOLS_STANDALONE

//! Evaluates to true if datatools was built with Boost I/O support
#define DATATOOLS_WITH_BIO 1

//! Evaluates to true if datatools was built with CAMP reflection/introspection support
#cmakedefine01 DATATOOLS_WITH_REFLECTION

//! Evaluates to true if datatools was built with READLINE support
#cmakedefine01 DATATOOLS_WITH_READLINE

//! Evaluates to true if datatools was built with automated init/fini operation at DLL loading
#cmakedefine01 DATATOOLS_WITH_IMPLICIT_INIT_FINI

//! Evaluates to true if datatools was built with Qt-based GUI components
#cmakedefine01 DATATOOLS_WITH_QT_GUI

//! Defined if the DATATOOLS_SYS_DEVEL is set
#cmakedefine DATATOOLS_SYS_DEVEL

#define DATATOOLS_ENV_RESOURCE_DIR "DATATOOLS_RESOURCE_DIR"

#endif // DATATOOLS_DATATOOLS_CONFIG_H

