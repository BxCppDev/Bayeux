#!/usr/bin/env bash
# -*- mode: shell-script; -*-
# genvtx-config
##

script_name="genvtx-config"

opwd=$(pwd)
help=0
debug=0
bio_support=0
python_wrapper_support=0

if [ ${python_wrapper_support} -eq 1 ]; then
    with_python_wrapper=0
    if [ "x@GENVTX_WITH_PYTHON_WRAPPER@" == "x1"  -o "x@GENVTX_WITH_PYTHON_WRAPPER@" == "xON" ]; then
	with_python_wrapper=1
    fi
fi

with_bio=0
if [ ${bio_support} -eq 1 ]; then
    if [ "x@GENVTX_WITH_BIO@" == "x1" -o "x@GENVTX_WITH_BIO@" == "xON" ]; then
	with_bio=1
    fi
fi

with_debug=0
if [ "x@GENVTX_WITH_DEBUG@" == "x1" -o "x@GENVTX_WITH_DEBUG@" == "xON" ]; then
    with_debug=1
fi

function my_exit ()
{
    cd ${opwd}
    exit $1
}

genvtx_system="@CMAKE_SYSTEM_NAME@-@CMAKE_SYSTEM_PROCESSOR@"

genvtx_root="@CMAKE_INSTALL_PREFIX@"

genvtx_include_dir="${genvtx_root}/@CMAKE_INSTALL_INCLUDEDIR@"

genvtx_lib_dir="${genvtx_root}/@CMAKE_INSTALL_LIBDIR@"

genvtx_bin_dir="${genvtx_root}/@CMAKE_INSTALL_BINDIR@"

genvtx_data_dir="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@"

genvtx_etc_dir="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_ETCDIR@"

genvtx_doc_dir="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DOCDIR@"

genvtx_cmake_config_dir="@CMAKE_INSTALL_PREFIX@/@genvtx_cmake_config_install_dir@"

genvtx_version=@genvtx_VERSION_STR@

option="$1"
shift 1

if [ "x${option}" = "x" ]; then
    echo "ERROR: ${script_name}: Missing option ! Abort !" 1>&2
    help=1
fi

if [ "x${option}" = "x--help" -o "x${option}" = "x-h" -o "x${option}" = "x-?" ]; then
    help=1
fi

function print_help ()
{
    cat<<EOF
Usage: ${script_name} [OPTIONS]

Known values for OPTION are:

  --help                print this help then exit
  --version             print version information
  --system              print system
  --prefix              print genvtx installation prefix
  --incdir              print include directory
  --libdir              print library directory
  --bindir              print binary directory
  --datadir             print data/resources base directory
  --docdir              print documentation base directory
  --etcdir              print configuration base directory
  --include             print include path pre-processor flags without dependencies
  --cflags              print include path pre-processor flags with dependencies
EOF
    cat<<EOF
  --libs     [option]   print library linking information, without dependencies
  --ldflags  [option]   print library linking information, with dependencies
EOF
    if [ ${bio_support} -eq 1 ]; then
	cat<<EOF
      Options: --with-bio     with linkage against the libgenvtx_bio.so DLL (default)
               --without-bio  without linkage against the libgenvtx_bio.so DLL
EOF
    fi
    if [ ${bio_support} -eq 1 ]; then
	cat<<EOF
  --with-bio            print if Boost/Serialization binary code is pre-built 
                        in an auxiliary I/O shared library
EOF
    fi
    if [ ${python_wrapper_support} -eq 1 ]; then
	cat<<EOF
  --with-python-wrapper print if Python wrapper module is used
EOF
    fi
    cat<<EOF
  --with-debug          print if genvtx has been compiled in 'debug' mode
  --cmake-config-dir    print the installation directory for the 'genvtx-config.cmake' file
EOF
    # Dependencies:
    cat<<EOF
    --geomtools-version print geomtools version
EOF
    return 0
}

if [ ${help} -eq 1 ]; then
    print_help
    my_exit 1
fi

if [ "x${option}" = "x--system" ]; then
    echo "${genvtx_system}"
    my_exit 0
fi

if [ "x${option}" = "x--prefix" ]; then
    echo "${genvtx_root}"
    my_exit 0
fi

if [ "x${option}" = "x--version" ]; then
    echo "${genvtx_version}"
    my_exit 0
fi

if [ "x${option}" = "x--cmake-config-dir" ]; then
    echo "${genvtx_cmake_config_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--include-dir" -o "x${option}" = "x--incdir" ]; then
    echo "${genvtx_include_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--datadir" ]; then
    echo "${genvtx_data_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--etcdir" ]; then
    echo "${genvtx_etc_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--docdir" ]; then
    echo "${genvtx_doc_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--resources-dir" ]; then
    echo "${genvtx_resources_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--include" ]; then
    echo "-I${genvtx_include_dir} "
    my_exit 0
fi

if [ "x${option}" = "x--cflags" ]; then
    (
	echo -n "-fPIC " 
	echo -n "-I${genvtx_include_dir} "  
	echo -n "`geomtools-config --cflags` "
	echo ""
    ) | python @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@/pkgtools/mkuniqueflags.py     
    my_exit 0
fi

if [ "x${option}" = "x--libdir" ]; then
    echo "${genvtx_lib_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--bindir" ]; then
    echo "${genvtx_bin_dir}"
    my_exit 0
fi

# compute default linkage :
bio_ldflags=
if [ ${with_bio} -eq 1 ]; then
    bio_ldflags=${genvtx_lib_dir}/libgenvtx_bio@CMAKE_SHARED_LIBRARY_SUFFIX@
fi

if [ "x${option}" = "x--libs" -o "x${option}" = "x--ldflags" ]; then
    while [ -n "$1" ]; do
	lib_option="$1"
	if [ "x${lib_option}" = "x--without-bio" ]; then
	    bio_ldflags=
	elif [ "x${lib_option}" = "x--with-bio" -a ${with_bio} -eq 1 ]; then
	    bio_ldflags=${genvtx_lib_dir}/libgenvtx_bio@CMAKE_SHARED_LIBRARY_SUFFIX@
	fi
	shift 1
    done
fi
 
if [ "x${option}" = "x--libs" ]; then
    echo -n "${bio_ldflags} "
    echo -n "${genvtx_lib_dir}/libgenvtx@CMAKE_SHARED_LIBRARY_SUFFIX@ "
    echo
    my_exit 0
fi

if [ "x${option}" = "x--ldflags" ]; then
    (
	echo -n "${bio_ldflags} "
	echo -n "${genvtx_lib_dir}/libgenvtx@CMAKE_SHARED_LIBRARY_SUFFIX@ "
	echo -n "`geomtools-config --ldflags` "
	echo ""
    ) | python @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@/pkgtools/mkuniqueflags.py -r   
    my_exit 0
fi

if [ "x${option}" = "x--with-debug" ]; then
    echo "${with_debug}"
    if [ ${with_debug} -eq 1 ]; then
	my_exit 0
    else
	my_exit 1	
    fi
fi

if [ ${bio_support} -eq 1 ]; then
    if [ "x${option}" = "x--with-bio" ]; then
	echo "${with_bio}"
	if [ ${with_bio} -eq 1 ]; then
	    my_exit 0
	else
	    my_exit 1	
	fi
    fi
fi

if [ ${python_wrapper_support} -eq 1 ]; then
    if [ "x${option}" = "x--with-python-wrapper" ]; then
	echo "${with_python_wrapper}"
	if [ ${with_python_wrapper} -eq 1 ]; then
	    my_exit 0
	else
	    my_exit 1	
	fi
    fi
fi

if [ "x${option}" = "x--geomtools-version" ]; then
    echo @geomtools_VERSION@
    my_exit 0
fi

echo "ERROR: ${script_name}: Unknown option !" 1>&2
print_help
my_exit 1

# end of genvtx-config
