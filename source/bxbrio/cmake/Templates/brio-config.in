#!/usr/bin/env bash
# -*- mode: shell-script; -*-
# brio-config
##

script_name="brio-config"

opwd=$(pwd)
help=0
debug=0
bio_support=0
python_wrapper_support=0

if [ ${python_wrapper_support} -eq 1 ]; then
    with_python_wrapper=0
    if [ "x@BRIO_WITH_PYTHON_WRAPPER@" == "x1"  -o "x@BRIO_WITH_PYTHON_WRAPPER@" == "xON" ]; then
	with_python_wrapper=1
    fi
fi

with_bio=0
if [ ${bio_support} -eq 1 ]; then
    if [ "x@BRIO_WITH_BIO@" == "x1" -o "x@BRIO_WITH_BIO@" == "xON" ]; then
	with_bio=1
    fi
fi

with_debug=0
if [ "x@BRIO_WITH_DEBUG@" == "x1" -o "x@BRIO_WITH_DEBUG@" == "xON" ]; then
    with_debug=1
fi

function my_exit ()
{
    cd ${opwd}
    exit $1
}

brio_system="@CMAKE_SYSTEM_NAME@-@CMAKE_SYSTEM_PROCESSOR@"

brio_root="@CMAKE_INSTALL_PREFIX@"

brio_include_dir="${brio_root}/@CMAKE_INSTALL_INCLUDEDIR@"

brio_lib_dir="${brio_root}/@CMAKE_INSTALL_LIBDIR@"

brio_bin_dir="${brio_root}/@CMAKE_INSTALL_BINDIR@"

brio_data_dir="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@"

brio_etc_dir="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_ETCDIR@"

brio_doc_dir="@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DOCDIR@"

brio_cmake_config_dir="@CMAKE_INSTALL_PREFIX@/@brio_cmake_config_install_dir@"

brio_version=@brio_VERSION_STR@

option="$1"
shift 1

if [ "x${option}" = "x" ]; then
    echo "ERROR: ${script_name}: Missing option ! Abort !" 1>&2
    help=1
fi

if [ "x${option}" = "x--help" -o "x${option}" = "x-h" -o "x${option}" = "x-?" ]; then
    help=1
fi

function print_help ()
{
    cat<<EOF
Usage: ${script_name} [OPTIONS]

Known values for OPTION are:

  --help                print this help then exit
  --version             print version information
  --system              print system
  --prefix              print brio installation prefix
  --incdir              print include directory
  --libdir              print library directory
  --bindir              print binary directory
  --datadir             print data/resources base directory
  --docdir              print documentation base directory
  --etcdir              print configuration base directory
  --include             print include path pre-processor flags without dependencies
  --cflags              print include path pre-processor flags with dependencies
EOF
    cat<<EOF
  --libs     [option]   print library linking information, without dependencies
  --ldflags  [option]   print library linking information, with dependencies
EOF
    if [ ${bio_support} -eq 1 ]; then
	cat<<EOF
    Options: 
        --with-bio      with linkage against the libbrio_bio.so DLL (default)
        --without-bio   without linkage against the libbrio_bio.so DLL
EOF
    fi
    if [ ${bio_support} -eq 1 ]; then
	cat<<EOF
  --with-bio            print if Boost/Serialization binary code is pre-built 
                        in an auxiliary I/O shared library
EOF
    fi
    if [ ${python_wrapper_support} -eq 1 ]; then
	cat<<EOF
  --with-python-wrapper print if Python wrapper module is used
EOF
    fi
    cat<<EOF
  --with-debug          print if brio has been compiled in 'debug' mode
  --cmake-config-dir    print the installation directory for the 'brio-config.cmake' file
EOF
    # Dependencies:
    cat<<EOF
   --datatools-version   print datatools version
   --root-version        print ROOT version
EOF
    return 0 
}

if [ ${help} -eq 1 ]; then
    print_help
    my_exit 1
fi

if [ "x${option}" = "x--system" ]; then
    echo "${brio_system}"
    my_exit 0
fi

if [ "x${option}" = "x--prefix" ]; then
    echo "${brio_root}"
    my_exit 0
fi

if [ "x${option}" = "x--version" ]; then
    echo "${brio_version}"
    my_exit 0
fi

if [ "x${option}" = "x--cmake-config-dir" ]; then
    echo "${brio_cmake_config_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--include-dir" -o "x${option}" = "x--incdir" ]; then
    echo "${brio_include_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--datadir" ]; then
    echo "${brio_data_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--etcdir" ]; then
    echo "${brio_etc_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--docdir" ]; then
    echo "${brio_doc_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--resources-dir" ]; then
    echo "${brio_resources_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--include" ]; then
    echo "-I${brio_include_dir} "
    my_exit 0
fi

if [ "x${option}" = "x--cflags" ]; then
    (
	echo -n "-fPIC " 
	echo -n "-I${brio_include_dir} "  
	echo -n "`datatools-config --cflags` "
	echo -n "`root-config --cflags` "
	echo ""
    ) | python @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@/pkgtools/mkuniqueflags.py     
    my_exit 0
fi

if [ "x${option}" = "x--libdir" ]; then
    echo "${brio_lib_dir}"
    my_exit 0
fi

if [ "x${option}" = "x--bindir" ]; then
    echo "${brio_bin_dir}"
    my_exit 0
fi

# compute default linkage :
bio_ldflags=
if [ ${with_bio} -eq 1 ]; then
    bio_ldflags=${brio_lib_dir}/libbrio_bio@CMAKE_SHARED_LIBRARY_SUFFIX@
fi

if [ "x${option}" = "x--libs" -o "x${option}" = "x--ldflags" ]; then
    while [ -n "$1" ]; do
	lib_option="$1"
	if [ "x${lib_option}" = "x--without-bio" ]; then
	    bio_ldflags=
	elif [ "x${lib_option}" = "x--with-bio" -a ${with_bio} -eq 1 ]; then
	    bio_ldflags=${brio_lib_dir}/libbrio_bio@CMAKE_SHARED_LIBRARY_SUFFIX@
	fi
	shift 1
    done
fi
 
if [ "x${option}" = "x--libs" ]; then
    echo -n "${bio_ldflags} "
    echo -n "${brio_lib_dir}/libbrio@CMAKE_SHARED_LIBRARY_SUFFIX@ "
    echo
    my_exit 0
fi

if [ "x${option}" = "x--ldflags" ]; then
    (
	echo -n "${bio_ldflags} "
	echo -n "${brio_lib_dir}/libbrio@CMAKE_SHARED_LIBRARY_SUFFIX@ "
	echo -n "`datatools-config --ldflags` "
	echo -n "`root-config --libs` "
	echo ""
    ) | python @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@/pkgtools/mkuniqueflags.py -r   
    my_exit 0
fi

if [ "x${option}" = "x--with-debug" ]; then
    echo "${with_debug}"
    if [ ${with_debug} -eq 1 ]; then
	my_exit 0
    else
	my_exit 1	
    fi
fi

if [ ${bio_support} -eq 1 ]; then
    if [ "x${option}" = "x--with-bio" ]; then
	echo "${with_bio}"
	if [ ${with_bio} -eq 1 ]; then
	    my_exit 0
	else
	    my_exit 1	
	fi
    fi
fi

if [ ${python_wrapper_support} -eq 1 ]; then
    if [ "x${option}" = "x--with-python-wrapper" ]; then
	echo "${with_python_wrapper}"
	if [ ${with_python_wrapper} -eq 1 ]; then
	    my_exit 0
	else
	    my_exit 1	
	fi
    fi
fi

if [ "x${option}" = "x--datatools-version" ]; then
    echo @DATATOOLS_VERSION@
    my_exit 0
fi

if [ "x${option}" = "x--root-version" ]; then
    $(root-config --version)
    my_exit 0
fi

echo "ERROR: ${script_name}: Unknown option !" 1>&2
print_help
my_exit 1

# end of brio-config
